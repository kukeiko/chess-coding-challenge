{
    "compilerOptions": {
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "strict": true,
        "lib": ["DOM", "scripthost", "es2015", "es2016.array.include", "ES2017.Object"],
        "baseUrl": ".",
        "paths": { "src": ["src"] }
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
